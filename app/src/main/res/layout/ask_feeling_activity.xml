<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_height="400dp"
		android:layout_width="match_parent"
		android:background="@drawable/afa_bg_gradient"
		android:layout_alignParentBottom="true"
		android:id="@+id/select_value_base">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="200dp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
			android:id="@+id/askfeelingactivityRelativeLayout1">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:rotation="-45"
				android:layout_centerInParent="true">

				<alistar.app.ColoredImageView
					android:layout_height="54dp"
					android:layout_width="54dp"
					android:src="@drawable/ic_expand_less_white_48dp"
					android:layout_gravity="center"
					android:padding="8dp"
					app:setColor="#69FFDE"
					android:id="@+id/up"/>

				<RelativeLayout
					android:layout_height="68dp"
					android:layout_width="68dp"
					android:background="@drawable/storke_circle"
					android:id="@+id/save_base">

				</RelativeLayout>

				<alistar.app.ColoredImageView
					android:layout_height="54dp"
					android:layout_width="54dp"
					android:src="@drawable/ic_expand_more_white_48dp"
					android:layout_gravity="center"
					android:padding="8dp"
					android:id="@+id/down"
					app:setColor="#FF6C94"/>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="48dp"
				android:text="0"
				android:layout_centerInParent="true"
				android:gravity="center"
				android:textColor="#D8DAE8"
				android:textSize="28sp"
				android:id="@+id/value"/>

		</RelativeLayout>

		<alistar.app.EmotionsSeekBar
			android:layout_height="48dp"
			android:layout_width="match_parent"
			android:layout_margin="6dp"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:id="@+id/emotionsSeekBar"
			android:layout_above="@id/askfeelingactivityRelativeLayout1"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:text="How are you feeling?"
			android:layout_above="@id/emotionsSeekBar"
			android:layout_centerHorizontal="true"
			android:textColor="#D8DAE8"
			android:id="@+id/title"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/note_base"
		android:background="#3FABD7"
		android:visibility="invisible">

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:ems="10"
			android:id="@+id/note_et"/>

	</RelativeLayout>

</RelativeLayout>

